/**
 * @fileOverview node环境下直接读取less生成的css源文件
 * @author Max
 **/
import fs from 'fs';
import path from 'path';

global._importLess = function load(filePath, dirname) {
    // node环境

    let cssFilePath = path.join(dirname, path.dirname(filePath), path.basename(filePath) + '.css');
    try {
        let content = fs.readFileSync(cssFilePath, 'utf-8');
        return content;
    } catch (e) {
        console.error(e);
    }
    return '';
};
